<%- include('header') %>
<div class="container">
    <h1 class="heading"> Thêm <span>sách</span></h1>
    <form class="row g-3 needs-validation" action="/admin/products/update" method="POST" enctype="multipart/form-data">
        <div class="col-md-6">
            <label for="validationCustom01" class="form-label">Tên sách</label>
            <input type="text" class="form-control" name="nameBook" id="validationCustom01" value="<%= data.tenSach  %>">
        </div>
        <div class="col-md-6">
            <label for="validationCustom02" class="form-label">Giá sách</label>
            <input type="text" class="form-control" name="priceBook" id="validationCustom02" value="<%= data.gia  %>">
        </div>
        <div class="col-md-6">
            <label for="validationCustom04" class="form-label">Hình sách</label>
            <input type="file" name="imgBook" class="form-control" id="validationCustom04">
        </div>
        <div class="col-md-6">
            <label for="validationCustom03" class="form-label">Loại sách</label>
            <select class="form-control" name="idCate">
                <option value="0" disabled>Chọn loại sách</option>
                <% for (let cate of item) { %> 
                    <% data.idLoai == cate.id ? s = "selected" : s = "" %> 
                    <option value="<%= cate.id %>" <%= s %> ><%= cate.tenLoai %></option>
                <% } %> 
            </select>
        </div>
        <div class="col-md-12">
            <label  class="form-label">Ẩn hiện</label>
            <input style="margin-left: 1rem;" type="radio" name="status" value="1" <%= data.anHien == 1 ? "checked" : ""  %>> Hiện
            <input style="margin-left: 1rem;" type="radio" name="status" value="0" <%= data.anHien == 0 ? "checked" : "" %>> Ẩn              
        </div>
        <div class="col-md-12">
            <label for="validationCustom05" class="form-label">Mô tả</label>
            <textarea class="form-control" name="detailBook" id="validationCustom03"><%= data.moTa  %></textarea>
        </div>
        <div class="col-12">
            <input type="hidden" name="idBook" value="<%= data.id  %>">
            <button class="btn" type="submit">Cập nhật</button>
        </div>
    </form>
</div>
<%- include('footer') %> 